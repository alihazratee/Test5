<h2>Add Student</h2>
<form name="addStudent" method="post" action="/addStudent">
  <fieldset>
    <legend>Student Information</legend>
    <p> Student ID:<input type="text" name="studId" /> </p>
    <label>Student Name: </label>
    <input type="text" name="name" />
    <br /><br />
    <label>Program:</label>
    <select name="program">
      <option>BSD</option>
      <option>CPA</option>
      <option>DSA</option>
    </select>
    <br /><br />
    <label>GPA:</label>
    <input type="text" name="gpa" />
    <br /><br />
    <input type="submit" value="Add Student" />
    <input type="reset" />
  </fieldset>
</form>